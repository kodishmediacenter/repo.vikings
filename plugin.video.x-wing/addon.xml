<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.x-wing" name="[B][COLOR lightseagreen]M[/COLOR]x-win[COLOR lightseagreen]G[/COLOR] D[COLOR lightseagreen]S[/COLOR][/B]" version="8.0.1" provider-name="[COLOR lightseagreen][B]Dearhstar Version[/B][/COLOR]">
	<requires>
		<import addon="xbmc.python" version="2.19.0"/>
		<import addon="repository.uk1"/>
		<import addon="script.module.requests" version="2.9.1"/>
		<import addon="script.module.futures" version="2.2.0"/>
	</requires>
	<extension point="xbmc.python.pluginsource" library="default.py">
		<provides>video audio</provides>
	</extension>
	<extension point="xbmc.service" library="service.py" start="[login|startup]">
	</extension>
	<extension point="kodi.context.item">
		<menu id="kodi.core.main">
			<menu>
				<label>[COLOR lightseagreen]M[/COLOR]x-win[COLOR lightseagreen]G[/COLOR] D[COLOR lightseagreen]S[/COLOR]</label>
				<item library="context_toggle.py">
					<label>Preferred toggle</label>
					<visible>!System.HasAddon(context.x-wing) + !Skin.HasSetting(Toggling)</visible>
				</item>
				<item library="context_movie.py">
					<label>$ADDON[plugin.video.x-wing 30602]</label>
					<visible>StringCompare(ListItem.dbtype,movie) + SubString(ListItem.Path, plugin.video.x-wing)</visible>
				</item>
				<item library="context_tvshow.py">
					<label>$ADDON[plugin.video.x-wing 30602]</label>
					<visible>StringCompare(ListItem.dbtype,tvshow) + SubString(ListItem.Path, plugin.video.x-wing)</visible>
				</item>
				<item library="context_live.py">
					<label>$ADDON[plugin.video.x-wing 30602]</label>
					<visible>[SubString(ListItem.FileNameAndPath, plugin.video.x-wing\\Live) | SubString(ListItem.FileNameAndPath, plugin.video.x-wing\\Live)]</visible>
				</item>
				<item library="context_playable.py">
					<label>$ADDON[plugin.video.x-wing 30622]</label>
					<visible>!System.HasAddon(context.x-wing) + !Skin.HasSetting(Contexting)</visible>
				</item>
			</menu>
		</menu>
	</extension>
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<language></language>
		<summary lang="en">TMDb, TVDb, Trakt, AudioDb, LastFM Browser</summary>
		<description lang="en">[COLOR lightseagreen]Just something to go with Deathstar. Without The Old Gods none of this would ever exist.. [/COLOR][CR]Browse The MovieDb, The TVDb, Trakt, The AudioDb and LastFM and pass info along to library or an addon to try and play it. Needs player-files and the appropriate addon to actually play.</description>
		<summary lang="nl">Blader door TMDb, TVDb, Trakt, AudioDb en LastFM</summary>
		<description lang="nl">Blader door The MovieDb, The TVDb, Trakt, The AudioDb en LastFM en geef info door aan de bibliotheek of een addon om te proberen het af te spelen. Vereist player-bestanden en de bijbehorende addon om daadwerkelijk af te kunnen spelen.</description>
		<supportedcontent>
			<content>movies</content>
			<content>tvshows</content>
			<content>episodes</content>
			<content>musicvideos</content>
			<content>music</content>
			<content>livetv</content>
		</supportedcontent>
		<genre>movies,tv,music,livetv</genre>
